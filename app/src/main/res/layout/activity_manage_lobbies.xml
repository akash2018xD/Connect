<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_manage_lobbies"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.akash.feedback.ManageLobbies">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/redcross"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/redcross"
            />
        <ImageView
            android:id="@+id/name"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:src="@drawable/newname" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Lobbies"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="2dp"
        android:textColor="#757575"
        android:text="Select those you like"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lobbytext"
        android:layout_marginTop="20dp"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:id="@+id/deptlobby"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="60dp"
                            android:src="@drawable/mydepartment"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Dept."
                            android:textColor="#757575"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/purchaselobby"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/purchase"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Purchase"
                            android:textColor="#757575"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/securitylobby"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/security"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Security"
                            android:textColor="#757575"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:id="@+id/accountslobby"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="60dp"
                            android:src="@drawable/accounts"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Acconts"
                            android:textColor="#757575"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/generallobby"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/general"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="General"
                            android:textColor="#757575"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/prodlobby"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/production"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Production"
                            android:textColor="#757575"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:id="@+id/legallobby"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="60dp"
                            android:src="@drawable/legal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Legal"
                            android:textColor="#757575"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/supportlobby"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/customersupport"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Support"
                            android:textColor="#757575"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/traininglobby"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/training"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Training"
                            android:textColor="#757575"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:id="@+id/adminlobby"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="60dp"
                            android:src="@drawable/admin"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Admin."
                            android:textColor="#757575"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/designlobby"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/proddesign"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Design"
                            android:textColor="#757575"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/finance"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Food"
                            android:textColor="#757575"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>