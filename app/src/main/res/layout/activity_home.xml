<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.akash.feedback.Home"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawerLayout"
    >

    <RelativeLayout
        android:id="@+id/activity_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

       <android.support.v7.widget.CardView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:cardCornerRadius="25dp"
           android:layout_marginTop="5dp"
           app:cardBackgroundColor="#FFFFFF">
           <ImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:id="@+id/navdrawerbutton"
               android:src="@drawable/navbutton"
               />
       </android.support.v7.widget.CardView>
        <ImageView
            android:id="@+id/name"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:src="@drawable/newname"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:id="@+id/pollstext"
            android:text="Polls"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="2dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <HorizontalScrollView
            android:id="@+id/polls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pollstext"
            android:layout_marginTop="20sp"
            android:scrollbars="none"
            android:scrollbarStyle="insideOverlay">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:onClick="selectpoll"
                android:id="@+id/pollcardfood"
            android:layout_margin="3dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/finance"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                android:textColor="#757575"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_gravity="center"
                />
            </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/pollcarddept"
                android:onClick="selectpoll"
                android:layout_margin="3dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/mydepartment"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Dept."
                        android:textColor="#757575"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/pollcardpurchase"
                android:onClick="selectpoll"
                android:layout_margin="3dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/purchase"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Purchase"
                        android:textColor="#757575"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/pollcardhr"
                android:onClick="selectpoll"
                android:layout_margin="3dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/hr"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HR."
                        android:textColor="#757575"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/pollcardsecurity"
                android:onClick="selectpoll"
                android:layout_margin="3dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/security"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Security"
                        android:textColor="#757575"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>
        </HorizontalScrollView>
        <View
            android:id="@+id/lambiline"
            android:layout_below="@+id/polls"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="365dp"
            android:layout_height="2dp"
            android:background="#757575"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lambiline"
            android:id="@+id/lobbytext"
            android:text="Lobbies"
            android:layout_marginTop="30sp"
            android:layout_marginLeft="2sp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lobbytext"
            android:layout_marginTop="20dp"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">
                    <android.support.v7.widget.CardView
                        android:onClick="selectlobby"
                        android:id="@+id/deptlobby"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_height="60dp"
                                android:src="@drawable/mydepartment"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="My Dept."
                                android:textColor="#757575"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:onClick="selectlobby"
                        android:id="@+id/purchaselobby"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/purchase"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Purchase"
                                android:textColor="#757575"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:onClick="selectlobby"
                        android:id="@+id/securitylobby"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/security"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Security"
                                android:textColor="#757575"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">
                    <android.support.v7.widget.CardView
                        android:onClick="selectlobby"
                        android:id="@+id/accountslobby"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_height="60dp"
                                android:src="@drawable/accounts"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Acconts"
                                android:textColor="#757575"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:onClick="selectlobby"
                        android:id="@+id/generallobby"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/general"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="General"
                                android:textColor="#757575"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:onClick="selectlobby"
                        android:id="@+id/prodlobby"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/production"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Production"
                                android:textColor="#757575"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">
                    <android.support.v7.widget.CardView
                        android:onClick="selectlobby"
                        android:id="@+id/legallobby"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_height="60dp"
                                android:src="@drawable/legal"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Legal"
                                android:textColor="#757575"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:onClick="selectlobby"
                        android:id="@+id/supportlobby"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/customersupport"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Support"
                                android:textColor="#757575"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:onClick="selectlobby"
                        android:id="@+id/traininglobby"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/training"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Training"
                                android:textColor="#757575"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">
                    <android.support.v7.widget.CardView
                        android:onClick="selectlobby"
                        android:id="@+id/adminlobby"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_height="60dp"
                                android:src="@drawable/admin"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Admin."
                                android:textColor="#757575"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:onClick="selectlobby"
                        android:id="@+id/designlobby"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/proddesign"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Design"
                                android:textColor="#757575"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
        <com.github.clans.fab.FloatingActionMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/floatingactionbutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        app:menu_showShadow="true"
        app:menu_openDirection="up"
        app:menu_backgroundColor="@android:color/transparent">
            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="NavMenuRedirect"
                android:id="@+id/floatingdistress"
                android:src="@drawable/distress"
                app:fab_label="In a distress"
                app:fabSize="normal"/>
            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/floatingpoll"
                android:src="@drawable/addlogo"
                fab:fab_colorNormal="#60A9DC"
                fab:fab_colorPressed="#60A9DC"
                fab:fab_colorRipple="#ffffff"
                app:fab_label="Request a poll"
                app:fabSize="normal"/>

            <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/floatingsenior"
                android:src="@drawable/addlogo"
                fab:fab_colorNormal="#85C441"
                fab:fab_colorPressed="#85C441"
                fab:fab_colorRipple="#ffffff"
            app:fab_label="To my senior"
            app:fabSize="normal"/>
            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/floatinggeneral"
                app:fab_label="General feedback"
                android:src="@drawable/addlogo"
                fab:fab_colorNormal="#F47822"
                fab:fab_colorPressed="#F47822"
                fab:fab_colorRipple="#ffffff"
                app:fabSize="normal"/>
    </com.github.clans.fab.FloatingActionMenu>
    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>