<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_floating_general_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.akash.feedback.FloatingGeneralMessage">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/redcross"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/redcross"
            />
        <ImageView
            android:id="@+id/name"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:src="@drawable/newname" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message To Senior"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="5dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/cont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:text="'Managers's Manager'(Single)"
        android:textColor="#757575"
        />
    <TextView
    android:id="@+id/cont"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="18dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="2dp"
    android:textStyle="bold"
    android:text="OR"
    android:textColor="#757575"
    />
    <TextView
    android:id="@+id/cont"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="18dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="2dp"
    android:textStyle="bold"
    android:text="'Manager's Manager+Manager'(Both)"
    android:textColor="#757575"
    />
    <HorizontalScrollView
        android:id="@+id/polls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pollstext"
        android:layout_marginTop="20sp"
        android:scrollbars="none"
        android:scrollbarStyle="insideOverlay">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:orientation="horizontal">


            <android.support.v7.widget.CardView
                android:id="@+id/singlecard"
                android:layout_margin="3dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/manager"/>
                    <TextView
                        android:id="@+id/single"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Single"
                        android:textColor="#757575"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/bothcard"
                android:layout_margin="3dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/managermanager"/>
                    <TextView
                        android:id="@+id/both"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Both"
                        android:textColor="#757575"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/cont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:text="Your message will be Anonymous"
        android:textColor="#757575"
        />
    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="50dp"
        android:id="@+id/passwrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >
        <EditText
            android:hint="Message"
            android:inputType="text"
            android:layout_width="280sp"
            android:layout_height="70sp"
            android:layout_centerHorizontal="true"
            />
    </android.support.design.widget.TextInputLayout>
    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Submit"
        android:textSize="15dp"
        android:id="@+id/submitbutton"
        android:layout_marginTop="30sp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
